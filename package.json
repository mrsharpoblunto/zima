    "@types/cookie-parser": "^1.4.6",
    "@types/errorhandler": "^1.5.3",
    "@types/express": "^5.0.2",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/node-fetch": "^2.6.9",
    "@types/node-persist": "^3.1.5",
    "@types/react": "^19.1.0",
    "@types/react-dom": "^19.1.0",
    "esbuild": "^0.25.9",
    "prettier": "^2.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.3.3",
    "vite": "^6.3.5"
  }
