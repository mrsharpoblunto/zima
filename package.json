{
  "name": "Zima",
  "version": "1.0.0",
  "description": "Control a powered pool cover",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:client": "rimraf dist/client/ && tsc && vite build --mode client",
    "build:server": "esbuild src/server/index.ts --bundle --platform=node --format=esm --packages=external --outfile=dist/server/index.js",
    "dev:server": "node src/server/index.ts",
    "server": "NODE_ENV=production node dist/server/index.js",
    "dev:client": "vite --port 3001 --mode client",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mrsharpoblunto/zima.git"
  },
  "author": "Glenn Conner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mrsharpoblunto/zima/issues"
  },
  "homepage": "https://github.com/mrsharpoblunto/zima#readme",
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "errorhandler": "^1.5.1",
    "express": "^5.1.0",
    "hap-nodejs": "^0.11.2",
    "lucide-react": "^0.544.0",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "node-persist": "^3.1.0",
    "onoff": "^6.0.0",
    "uuid": "^11.1.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@fsouza/prettierd": "^0.26.1",
